{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
      "buildCommand": "yarn run build",
      "nixpacksPlan": {
        "providers": ["node"],
        "phases": {
          "setup": {
            "nixPkgs": ["openssh", "yarn", "git"],
            "cmds": [
              "mkdir -p ~/.ssh",
              "ssh-keyscan github.com >> ~/.ssh/known_hosts"
            ]
          },
          "install": {
            "dependsOn": ["setup"],
            "cmds": ["yarn install"]
          }
        }
      }
    }
  }
  